<div class="container">
<h1>URL Shrinker</h1>
<form action="/shortUrls" method="POST" class="my-4 form-inline">
    <label for="fullUrl" class="sr-only">Url</label>
    <input placeholder="URL" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2" required>
    <button type="submit" class="btn btn-success">Shrink</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
        </tr>
    </thead>
    <tbody>
       
        <tr>
            <td><a href="{{shortUrls.full}}">{{shortUrls.full}}</a></td>
            <td><a href="{{shortUrls.short}}">{{shortUrls.short}}</a></td>
            <td>{{shortUrls.clicks}}</td>
        </tr>
      
    </tbody>
</table>
</div>